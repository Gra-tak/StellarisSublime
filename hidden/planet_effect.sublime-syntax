        set: 'Packages/Stellaris/hidden/country_effect.sublime-syntax'
  - match: '(?i)\b(closest_system|random_system|every_rim_system|random_rim_system|closest_system)\b{{equals_open_brace}}'
    captures:
      1: keyword.defined.block.altering
