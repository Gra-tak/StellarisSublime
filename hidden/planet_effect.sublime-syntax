        set: 'Packages/Stellaris/hidden/ambient_object_effect.sublime-syntax'
  - match: '(?i)\b(random_country|every_country)\b{{equals_open_brace}}'
    captures:
      1: keyword.defined.block.altering
      2: sign.equals
