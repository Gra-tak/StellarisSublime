    push: 'Packages/Stellaris/hidden/leader_effect.sublime-syntax'

  - include: 'Packages/Stellaris/hidden/constant_scopes.sublime-syntax'

  - match: '\b(switch)\b{{equals_open_brace}}'
    captures: 
      1: keyword.defined.block.constant
      2: sign.equals
      3: brace.open  
    push: main

  - match: '(?i)\b(tooltip|planet_event|add_resource|create_army|create_pop|create_colony|surveyed|create_mining_station|create_research_station|add_modifier|set_variable|change_variable|create_rebels|spawn_system|modify_species|create_point_of_interest|kill_leader|set_timed_planet_flag|purge|set_spaceport_module|create_spaceport|add_threat|hidden_effect|custom_tooltip|random|random_list|create_species|create_country|create_fleet|create_ambient_object|set_timed_global_flag|switch)\b{{equals_open_brace}}'
    captures:
      1: keyword.defined.block.constant
      2: sign.equals
      3: brace.open
    push: main
  - match: '(?i)\b(if|while)\b{{equals_open_brace}}'
    captures:
